doctype html
html(class="no-js", lang="ru")

    include _mixin
    include ../components/head/head
    include ../components/header/header
    include ../components/footer/footer
    include ../components/modal/modal

    head
        //- start  block head
        link(href="%=static=%css/separate-css/slick.css", rel="stylesheet", type="text/css")

        block head
        - var dataPage = '';
        - if(headData)
            - dataPage = headData
        - else
            - dataPage = head.defaults

        +head(dataPage)
        //- end  block head
    body.page
        |%=symbols=%

        section.page__wrapper
            +header()
            if index
                +img('content/img-index')(style="width: 100%;")
                br
                br
                br
                br
            .container
                -if(!breadcrumb)
                        br.hidden-md-down
                        br
                        br
                        ul.breadcrumb.not-styleLink
                            li: a(href="#"): span Главная
                            li: span= dataPage.title

                h1= dataPage.title

            //- Include your components here
            // start block content
            - var className = ''
            if index
                - className = 'content__wrapper_after'
            .content
                .container
                    .content__wrapper(class=className)
                        block content

                        .callback
                            p.callback__title Возникли вопросы?
                            p.callback__titleSub Отправьте заявку и наши менеджеры свяжутся с Вами в ближайшее время
                            hr
                            form.callback__form
                                .row
                                    .col-lg-3
                                        .form-group
                                            label Как к вам обращаться?
                                            input.form-control(placeholder="")
                                    .col-lg-3
                                        .form-group
                                            label Как к вам обращаться?
                                            input.form-control(placeholder="")
                                    .col-lg-3
                                        .form-group
                                            label Как к вам обращаться?
                                            input.form-control(placeholder="")
                                    .col-lg-3
                                        .form-group
                                            label &nbsp;
                                            button.btn.btn-purple.btn-width.ttu Отправить заявку

            // end block content


            .page__buffer
        .page__footer
            +footer()

        +modal()

        a(href='#').linkTop.not-styleLink

        script(src='%=static=%js/separate-js/svg4everybody.min.js')
        script(src="%=static=%js/separate-js/slick.min.js" type="text/javascript")
        script svg4everybody();

        script(src="%=static=%js/separate-js/bootstrap-select.min.js" type="text/javascript")
        script(src="%=static=%js/separate-js/dropdown.js" type="text/javascript")
        script(src="%=static=%js/separate-js/modal.js" type="text/javascript")
        //- start block script
        block script
        //- end block script
        //- Main scripts. You can replace it, but I recommend you to leave it here
        script(src='%=static=%js/main%=hash=%%=min=%.js')

